{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },
  "globals": {
    "connect": true
  },
  "rules": {
    "comma-dangle": 0,
    "max-len": 0,
    "vars-on-top": 0,
    "no-var": 0,
    "no-use-before-define": 0,
    "react/jsx-closing-bracket-location": 0,
    "react/no-did-mount-set-state": 0,
    "react/jsx-no-bind" : 0,
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/prefer-stateless-function": 0,
    "react/react-in-jsx-scope": 2,
    "block-scoped-var": 0,
    "padded-blocks": 0,
    "no-console": 0,
    "id-length": 0,
    "no-unused-expressions": 0,
    "camelcase": 0,
  },
  "plugins": [
    "react"
  ]
}
